<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 备用文本样式 - 使用系统默认字体确保粗体正常工作 -->
    <style name="BackupTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- 备用英文文本样式 -->
    <style name="BackupEnglishTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="BackupEnglishTextStyle.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green_700_7ree</item>
    </style>
    
    <style name="BackupEnglishTextStyle.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <style name="BackupEnglishTextStyle.Small">
        <item name="android:textSize">14sp</item>
    </style>
</resources>