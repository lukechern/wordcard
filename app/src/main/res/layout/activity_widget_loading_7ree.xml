<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- 主要内容区域 - 与查询界面完全一致 -->
    <FrameLayout
        android:id="@+id/widget_loading_main_content_7ree"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:clipChildren="false"
        android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/widget_loading_dialog_container_7ree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/widget_dialog_background_7ree">

        <!-- 加载动画容器 - 与查询界面内部结构保持一致 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:gravity="center"
            android:minHeight="120dp">

            <!-- 进度条 -->
            <ProgressBar
                android:id="@+id/widget_loading_progress_7ree"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:indeterminateTint="#4CAF50" />

            <!-- 加载文本 -->
            <TextView
                android:id="@+id/widget_loading_text_7ree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在启动查询..."
                android:textSize="16sp"
                android:textColor="#333333"
                android:gravity="center" />

            <!-- 提示文本 -->
            <TextView
                android:id="@+id/widget_loading_hint_7ree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="首次启动可能需要几秒钟"
                android:textSize="12sp"
                android:textColor="#666666"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- 应用图标 - 与查询界面完全一致的位置 -->
    <ImageView
        android:id="@+id/widget_loading_icon_7ree"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="2dp"
        android:background="@android:color/transparent"
        android:src="@drawable/wordcardicon"
        android:contentDescription="WordCard图标"
        android:elevation="8dp" />

    </FrameLayout>

</RelativeLayout>