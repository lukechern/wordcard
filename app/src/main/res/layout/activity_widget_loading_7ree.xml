<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:gravity="center">

    <!-- 主要内容区域 - 与查询界面保持相同大小 -->
    <FrameLayout
        android:id="@+id/widget_loading_content_7ree"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/widget_dialog_background_7ree"
        android:padding="20dp">

        <!-- 加载动画容器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- 进度条 -->
            <ProgressBar
                android:id="@+id/widget_loading_progress_7ree"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:indeterminateTint="#4CAF50" />

            <!-- 加载文本 -->
            <TextView
                android:id="@+id/widget_loading_text_7ree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在启动查询..."
                android:textSize="16sp"
                android:textColor="#333333"
                android:gravity="center" />

            <!-- 提示文本 -->
            <TextView
                android:id="@+id/widget_loading_hint_7ree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="首次启动可能需要几秒钟"
                android:textSize="12sp"
                android:textColor="#666666"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>

    </FrameLayout>

    <!-- 应用图标 - 与查询界面保持一致 -->
    <ImageView
        android:id="@+id/widget_loading_icon_7ree"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/widget_loading_content_7ree"
        android:layout_marginBottom="16dp"
        android:src="@mipmap/ic_launcher"
        android:background="@drawable/widget_icon_background_7ree"
        android:padding="8dp" />

</RelativeLayout>