<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/widget_background_7ree"
    android:id="@+id/widget_container_7ree"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:text="请输入需要查询的单词"
        android:textSize="12sp"
        android:textColor="#666666"
        android:background="@drawable/widget_input_background_7ree"
        android:paddingLeft="19dp"
        android:paddingRight="12dp"
        android:layout_marginRight="2dp"
        android:gravity="center_vertical" />

    <ImageButton
        android:id="@+id/widget_query_button_7ree"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_search_blue_7ree"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:layout_marginRight="6dp"
        android:contentDescription="查询" />

    <ImageButton
        android:id="@+id/widget_wordbook_button_7ree"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_list_alt_green_7ree"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:layout_marginLeft="2dp"
        android:adjustViewBounds="true"
        android:contentDescription="打开单词本" />

</LinearLayout>